{
  "roots": [
    "<rootDir>/src","<rootDir>/tests"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "testMatch": [
    "**/__tests__/**/*.+(ts|js)",
    "tests/**/?(*.)+(spec|test).+(ts|js)",
    "**/?(*.)+(spec|test).+(ts|js)"
  ],
  "moduleDirectories": [
    "node_modules",
    "<rootDir>/"
  ],
  "moduleNameMapper": {
    "\\.(css|less|scss)$": "identity-obj-proxy",
    "^@kartagraph-worker/(.*)$": "<rootDir>/src/$1"
  }
}